@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sswap: <http://sswapmeet.sswap.info/sswap/> .
@prefix cf:    <http://localhost:8080/cottageBooking/onto/CottageOntology.owl#> .
@prefix data:  <http://localhost:8080/cottageBooking/data/cottage#> .
@prefix res:   <http://localhost:8080/CottageService/> .

# RDG â€” describes the service shape (no concrete values here)
# Subject = cf:Cottage (used as filter holder) + a requested cf:Booking node
# Object  = cf:Cottage (matched cottages); each result may include a created cf:Booking via cf:hasBooking

res:cottageBookingService
  rdf:type sswap:Resource ;
  sswap:providedBy res:provider ;
  sswap:name "Cottage Booking Search Service (domain-only)" ;
  sswap:oneLineDescription "Find cottages by city/capacity/bedrooms/distances and propose bookings for requested dates." ;
  sswap:operatesOn [
    rdf:type sswap:Graph ;
    sswap:hasMapping [
      rdf:type sswap:Subject , cf:Cottage ;

      # ------- FILTERS (placeholders) -------

      #Required number of places
      cf:requiredPlaces "" ;

      # required number of bedrooms
      cf:requiredBedrooms "" ;

      # max distance to lake (meters)
      cf:maxLakeDistanceMeters "" ;

      # max distance to city (meters)
      cf:maxCityDistanceMeters "" ;

      #Start Date
      cf:startDay "" ;

      #Required Number of Days
      cf:requiredDays "" ;

      #Day Shift Max
      cf:maxStartShiftDays "" ;

      sswap:mapsTo [
        # ------- RESULTS (matched cottages; bookings will be attached under cf:hasBooking) -------
        rdf:type sswap:Object , cf:Cottage
      ]
    ]
  ] .